<odoo>

    <data>

        <record id="product_template_inherit_custom" model="ir.ui.view">
          <field name="name">product.template.inherit.custom</field>
          <field name="model">product.product</field>
          <field name="inherit_id" ref="product.product_template_form_view"/>
          <field name="arch" type="xml">

          <notebook position="inside">
          <page string="Information">
            <group col="4">
                <group width="50%">
                    <field name="entity_id"/>
                    <field name="nomenclature_id"/>
                    <field name="height_nomenclature"/>
                    <field name="width_nomenclature"/>
                    <separator/>
                    <field name="material_id"/>
                    <field name="material_color_id"/>
                    <field name="image_id"/>
                    <field name="faces_id"/>
                    <field name="affixment_id"/>
                    <field name="flyration_id"/>
                    <field name="generate_code" readonly="True"/>
                </group>
            </group>
          </page>
          </notebook>

          </field>
        </record>

        <record id="generate_barcode_flag_tree" model="ir.ui.view">
            <field name="name">generate.barcode.flag.tree</field>
            <field name="model">generate.barcode.flag</field>
            <field name="arch" type="xml">
                <tree default_order="id desc"
                      decoration-danger="color_selected">

                    <field name="barcode"/>
                    <field name="flyration_id"/>
                    <field name="nomenclature_id"/>
                    <field name="height_nomenclature"/>
                    <field name="width_nomenclature"/>
                    <field name="entity_id"/>
                    <field name="material_id"/>
                    <field name="image_id"/>
                    <field name="faces_id"/>
                    <field name="affixment_id"/>
                    <field name="color_selected" invisible="1"/>
                    <field name="prod_check" invisible="1"/>
<!--                    <button string="Create Quotation" class="oe_highlight"-->
<!--                            type="object" name="create_all_prods"/>-->
<!--                    attrs="{'invisible': [('prod_check','=',True)]}-->
                    <button icon="fa-plus" class="oe_highlight" attrs="{'invisible': [('prod_check','=',False)]}"
                             type="object" name="addproduct_action"/>
                </tree>
            </field>
        </record>

        <record id="generate_barcode_flag_form" model="ir.ui.view">
            <field name="name">generate.barcode.flag.form</field>
            <field name="model">generate.barcode.flag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <h1>
                        <table>
                            <tr>
                                <td style="padding-right:15px; padding-left:15px; ">
                                    <field string="barcode" name="barcode"/>
                                </td>
                            </tr>
                        </table>
                    </h1>

                    <group style="width:50%">
                        <field name="category_id" placeholder="Flag Category" style="width:70%"/>
                        <field name="entity_id" placeholder="Flag Entity" style="width:70%"/>
                        <field name="nomenclature_id" placeholder="Flag Nomenclature" style="width:70%"/>
                        <field name="height_nomenclature" placeholder="Height" style="width:70%; text-indent: -13px" readonly="False"/>
                        <field name="width_nomenclature" placeholder="Width" style="width:70%; font-weight: bold"/>
                        <field name="material_id" placeholder="Flag Material" style="width:70%"/>
                        <field name="material_color_id" placeholder="Material Color" style="width:70%"/>
                        <field name="image_id" placeholder="Flag Image" style="width:70%"/>
                        <field name="faces_id" placeholder="Flag Face" style="width:70%"/>
                        <field name="affixment_id" placeholder="Flag Affixment" style="width:70%"/>
                        <field name="flyration_id" placeholder="Flag Flyratio" style="width:70%"/>
                    </group>
                    <group style="width:50%">
                        <field name="image" widget="image" class="oe_left oe_avatar"/>
                        <separator/>
                        <field name="product_name"/>
                        <field name="description"/>
                        <!--                        <field name="product_id"/>-->
                        <field name="product_type"/>
                        <field name="product_category"/>
                        <field name="created_product"/>
                    </group>
                    <footer style="width:70%">
                        <button name="generate_flag_barcode" type="object"
                                string="Generate Barcode" class="oe_highlight" style="font-weight:bold; font-color:black"/>
                        <button name="create_prod" type="object" style="margin-left:120px; margin-right:10px"
                                string="Create Product" class="oe_highlight"/>
                        <button name="update_prod" type="object" style="margin-left:20px;margin-right:10px"
                                string="Update Product" class="oe_highlight"/>
<!--                        <button name="create_variant" type="object" style="margin-left:10px;margin-right:10px"-->
<!--                                string="Create Variant" class="oe_highlight"/>-->
                    </footer>
<!--                    <notebook>-->
<!--                        <page string="Generated Barcode">-->
<!--                            <field name="generate_code_lines">-->
<!--                                <tree default_order="id desc">-->
<!--                                <field name="barcode"/>-->
<!--                                    <field name="entity_id"/>-->
<!--                                    <field name="nomenclature_id"/>-->
<!--                                    <field name="material_id"/>-->
<!--                                    <field name="image_id"/>-->
<!--                                    <field name="faces_id"/>-->
<!--                                    <field name="affixment_id"/>-->
<!--                                    <field name="flyration_id"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="search_generate_barcode" model="ir.ui.view">
        <field name="name">generate.barcode.flag.search</field>
        <field name="model">generate.barcode.flag</field>
            <field name="arch" type="xml">
                <search string="Flag Barcode">
                    <group expand="0" string="Group By">
                        <filter name="category_id" string="Category" domain="[]" context="{'group_by':'category_id'}"/>
                        <filter name="flyration_id" string="Flyratio" domain="[]" context="{'group_by':'flyration_id'}"/>
                        <filter name="nomenclature_id" string="Nomenclature" domain="[]" context="{'group_by':'nomenclature_id'}"/>
                        <filter name="entity_id" string="Entity" domain="[]" context="{'group_by':'entity_id'}"/>
                        <filter name="material_id" string="Material" domain="[]" context="{'group_by':'material_id'}"/>
                        <filter name="image_id" string="Images" domain="[]" context="{'group_by':'image_id'}"/>
                        <filter name="faces_id" string="Faces" domain="[]" context="{'group_by':'faces_id'}"/>
                        <filter name="affixment_id" string="Affixment" domain="[]" context="{'group_by':'affixment_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="generate_barcode_flag_action" model="ir.actions.act_window">
            <field name="name">Generate Barcode Flag</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generate.barcode.flag</field>
            <field name="view_mode">tree,form</field>
        </record>


<menuitem id="flyration_flag_main_menu_root"
                  name="Generate Barcode"
                  web_icon="flag_barcode,static/description/icon.png"
                  sequence="3"
                  />

        <menuitem id="flyration_flag_main_menu"
                  name="Flag Configuration"
                  parent="flyration_flag_main_menu_root"
                  sequence="3"
                  />

        <menuitem id="flyration_flag_menu"
                  name="Flag FlyRatio"
                  action="flyration_flag_action"
                  parent="flyration_flag_main_menu"
                  groups="flag_barcode.group_flag_barcode_manager1"
                  sequence="4"
                  />
        <menuitem id="generate_flag_menu"
                  name="Generate Barcode"
                  parent="flyration_flag_main_menu"
                  sequence="0"
                  />

        <menuitem id="generate_barcode_flag_menu"
                  name="Generate Flag Barcode"
                  action="generate_barcode_flag_action"
                  parent="generate_flag_menu"
                  sequence="1"
                  />

        <menuitem id="affixment_flag_menu"
                  name="Flag Affixment"
                  action="affixment_flag_action"
                  parent="flyration_flag_main_menu"
                  groups="flag_barcode.group_flag_barcode_manager1"
                  sequence="4"
                  />


        <menuitem id="entity_flag_menu"
                  name="Flag Entity"
                  action="entity_flag_action"
                  parent="flyration_flag_main_menu"
                  groups="flag_barcode.group_flag_barcode_manager1"
                  sequence="4"
                  />

        <menuitem id="faces_flag_menu"
                  name="Flag Faces"
                  action="faces_flag_action"
                  parent="flyration_flag_main_menu"
                  groups="flag_barcode.group_flag_barcode_manager1"
                  sequence="4"
                  />


        <menuitem id="image_flag_menu"
                  name="Flag Image"
                  action="image_flag_action"
                  parent="flyration_flag_main_menu"
                  groups="flag_barcode.group_flag_barcode_manager1"
                  sequence="4"
                  />

        <menuitem id="material_color_flag_menu"
                  name="Material Color"
                  action="material_color_flag_action"
                  groups="flag_barcode.group_flag_barcode_manager1"
                  parent="flyration_flag_main_menu"
                  sequence="6"
                  />

        <menuitem id="material_flag_menu"
                  name="Material Type"
                  action="material_flag_action"
                  parent="flyration_flag_main_menu"
                  groups="flag_barcode.group_flag_barcode_manager1"
                  sequence="5"
                  />

        <menuitem id="nomenclature_flag_menu"
                  name="Flag Nomenclature"
                  action="nomenclature_flag_action"
                  parent="flyration_flag_main_menu"
                  groups="flag_barcode.group_flag_barcode_manager1"
                  sequence="4"
                  />



    </data>
</odoo>