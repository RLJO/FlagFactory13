<odoo>

    <data>

        <record id="ir_cron_tender_progress_bar_update" model="ir.cron">
            <field name="name">Tender Progressbar</field>
            <field name="model_id" ref="model_sales_tender"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.date_progress1()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>


        <record id="sale_order_inherit_custom" model="ir.ui.view">
          <field name="name">sale.order.inherit.custom</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="arch" type="xml">

            <field name="partner_id" position="after">
                <field name="created_tender" attrs="{'invisible': [('created_tender', '=', False)]}"/>
            </field>

          </field>
        </record>

        <record id="tender_sales_form" model="ir.ui.view">
            <field name="name">sales.tender</field>
            <field name="model">sales.tender</field>
            <field name="arch" type="xml">
                <form>

                    <header>
                        <button name="button_approve" states="draft"
                                string="Approve" type="object"
                                class="oe_highlight"
                                groups="uat_sales_tender.group_sales_tender_manager"/>

                        <button string="Print" states="approve,confirm"
                                type="object" name="print_report_action"
                                class="oe_highlight"/>

                        <button name="button_cancel" states="approve"
                                string="Cancel" type="object"
                                groups="uat_sales_tender.group_sales_tender_manager"/>

                        <button name="create_tender_so" states="approve"
                                string="Confirm" type="object"
                                class="oe_highlight"
                                groups="uat_sales_tender.group_sales_tender_manager"/>

                        <button name="button_to_draft" states="cancel"
                                string="Set to draft" type="object"
                                class="oe_highlight"
                                groups="uat_sales_tender.group_sales_tender_manager"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,approve,confirm,cancel"
                               statusbar_colors='{"confirm":"blue"}'/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="partner_id" required="True"/>
                                <separator/>
                                <field name="ordering_date"/>
                                <field name="ordering_date_hijri" attrs="{'invisible': [('ordering_date', 'in', [None,False])]}"/>
                                <field name="deadline_date"/>
                                <field name="deadline_date_hijri"/>
                                <separator/>
                                <field name="tender_no"/>
                                <field name="created_so"/>
                            </group>
                            <group string="Address">
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="c_state" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>

                            </group>
                            <group string="Completed">
                                <field name="date_progress" widget="percentpie"/>
                                <field name="displayed_remained_days"/>
                                <field name="status_tender"/>
<!--                                <field name="remained_days"/>-->
                            </group>


                        </group>
                        <notebook>
                            <page string="Tender Lines">
                                <field name="tender_ids">

                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <!--   <field name="tax_ids" widget="many2many_tags" />-->
                                        <field name="product_uom_id" />
                                        <field name="quantity"/>
                                        <field name="standard_price"/>
                                        <field name="price" groups="uat_sales_tender.group_sales_tender_manager"/>
                                        <field name="total" />
                                        <field name="qty_delivered" />
<!--                                        <field name="delivered_status" />-->
<!--                                        <field name="purchase_boolean" groups="uat_sales_tender.group_sales_tender_manager"/>-->
                                        <field class="center" name="note"/>
                                        <button string="Documents" class="oe_highlight" name="document_view2" type="object" />
                                        <field string="Suppliers" name="document_count2"/>
                                        <!--                            <button name="transfer_product_quantity"-->
                                        <!--                                string="Delivery QTY"-->
                                        <!--                                type="object" />-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="tender_sales_tree" model="ir.ui.view">
            <field name="name">sales.tender.tree</field>
            <field name="model">sales.tender</field>
            <field name="arch" type="xml">
                <tree string="Tenders" default_order="id desc"
                      decoration-warning="state == 'approve'"
                      decoration-success="state == 'confirm'"
                      decoration-danger="state == 'cancel'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="ordering_date"/>
                    <field name="deadline_date"/>
                    <field name="displayed_remained_days"/>
                    <field name="date_progress" widget="progressbar"/>
                    <field name="state"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                </tree>
            </field>
        </record>


        <record id="sales_tender_action" model="ir.actions.act_window">
            <field name="name">Tender Sales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sales.tender</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="sales_tender_root" name="Sales Tenders" web_icon="uat_sales_tender,static/description/icon.png"/>
        <menuitem id="sales_tender_child" parent="sales_tender_root" name="Tenders" sequence="2"/>
        <menuitem id="tender_sales_menu"
                  name="Tenders"
                  action="sales_tender_action"
                  parent="sales_tender_child"
                  sequence="2"
                  />
    </data>
</odoo>