<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="hr_employee_form_view_inherit" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tz']" position="after">
                <field name="emp_lang"/>
            </xpath>
            <xpath expr="//field[@name='study_school']" position="after">
                <field name="emp_exp"/>
            </xpath>
            <xpath expr="//field[@name='permit_no']" position="after">
                <field name="emp_date_start"/>
            </xpath>
            <xpath expr="//field[@name='emergency_contact']" position="after">
                <field name="emp_insurance_num"/>
            </xpath>
            <xpath expr="//field[@name='certificate']" position="after">
                <field name="emp_job_data"/>
            </xpath>
            <xpath expr="//field[@name='birthday']" position="after">
                <field name="birthday_hijri"/>
            </xpath>
        </field>
    </record>

<!--    Contract-->
    <record id="hr_contract_form_view_inherit2" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit2</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_start']" position="after">
                <field name="date_start_hijri"/>
            </xpath>
            <xpath expr="//field[@name='trial_date_end']" position="before">
                <field name="date_end_hijri"/>
            </xpath>
            <xpath expr="//field[@name='trial_date_end']" position="after">
                <field name="trial_date_end_hijri"/>
            </xpath>
        </field>
    </record>


</odoo>
